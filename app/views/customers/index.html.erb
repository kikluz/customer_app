<p id="notice"><%= notice %></p>

<h1>Listing Customers</h1>

<table>
  <thead>
    <tr>
      <th>Given name</th>
      <th>Family name</th>
      <th>Email address</th>
      <th>Address</th>
      <th>Address line 1</th>
      <th>Address line 2</th>
      <th>Locality</th>
      <th>Administrative district level 1</th>
      <th>Postal code</th>
      <th>Country</th>
      <th>Phone number</th>
      <th>Reference</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.given_name %></td>
        <td><%= customer.family_name %></td>
        <td><%= customer.email_address %></td>
        <td><%= customer.address %></td>
        <td><%= customer.address_line_1 %></td>
        <td><%= customer.address_line_2 %></td>
        <td><%= customer.locality %></td>
        <td><%= customer.administrative_district_level_1 %></td>
        <td><%= customer.postal_code %></td>
        <td><%= customer.country %></td>
        <td><%= customer.phone_number %></td>
        <td><%= customer.reference_id %></td>
        <td><%= customer.note %></td>
        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

